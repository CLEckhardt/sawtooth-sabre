# Description:
#   Builds an environment to publish the Sawtooth Sabre handler to crates.io.
#   Your crates api token must be passed in as CARGO_CRED at runtime
#   using Docker's -e option.

# docker build -f ci/sabre-publish-handler-crates -t sabre-publish-handler-crates ci/
# docker run --rm -v $(pwd):/project/sawtooth-sabre -e CARGO_CRED=%CREDVALUE% sabre-publish-handler-crates

FROM ubuntu:bionic

SHELL ["/bin/bash", "-o", "pipefail", "-c"]

RUN apt-get update \
 && apt-get install -y \
    curl \
    gcc \
    git \
    libssl-dev \
    libzmq3-dev \
    pkg-config \
    python3 \
    unzip \
 && apt-get clean \
 && rm -rf /var/lib/apt/lists/*

# For Building Protobufs
RUN curl https://sh.rustup.rs -sSf | sh -s -- -y \
 && TARGET_ARCH=$(dpkg --print-architecture) \
 && if [[ $TARGET_ARCH == "arm64" ]]; then \
      PROTOC_ARCH="aarch_64"; \
    elif [[ $TARGET_ARCH == "amd64" ]]; then \
      PROTOC_ARCH="x86_64"; \
    fi \
 && curl -OLsS https://github.com/google/protobuf/releases/download/v3.20.0/protoc-3.20.0-linux-$PROTOC_ARCH.zip \
 && unzip -o protoc-3.20.0-linux-$PROTOC_ARCH.zip -d /usr/local \
 && rm protoc-3.20.0-linux-$PROTOC_ARCH.zip

ENV PATH=$PATH:/protoc3/bin:/root/.cargo/bin

WORKDIR /project/sawtooth-sabre

CMD cd tp \
 && cargo login $CARGO_CRED \
 && rm -f Cargo.lock \
 && REPO_VER=$(VERSION=AUTO_STRICT ../bin/get_version) \
 && MINOR_VERSION=${REPO_VER%.*} \
 && sed -i'' -e "s/version.*$/version\ =\ \"$REPO_VER\"/" Cargo.toml \
 && sed -i'' -e "s/sabre-sdk.*$/sabre-sdk\ =\ \"$MINOR_VERSION\"/" Cargo.toml \
 && cargo clean \
 && cargo test \
 && cargo publish --allow-dirty \
 && git checkout Cargo.toml
